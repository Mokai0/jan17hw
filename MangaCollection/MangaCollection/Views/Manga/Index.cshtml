@model MangaCollection.Models.Manga[]
@{
    ViewBag.Title = "Mangas";
}

<h2>@ViewBag.Title</h2>

<div class="row">
    @foreach (var manga in Model)
    {
        <div class="col-md-3">
            <h4>@Html.ActionLink(manga.DisplayText, "Detail", new { id = manga.Id })</h4>
            <a href="@Url.Action("Detail", new { id = manga.Id })">
                <img src="/Images/@manga.CoverImageFileName"
                     alt="@manga.DisplayText"
                     class="img-responsive" />
            </a>
        </div>
    }
    </div>